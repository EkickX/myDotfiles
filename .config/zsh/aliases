# Changing/making/removing directory
setopt auto_cd # Change directory without typing cd
setopt auto_pushd
setopt pushd_ignore_dups
setopt pushdminus

alias -g ...='../..'
alias -g ....='../../..'

alias -- -='cd -'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'

alias md='mkdir -p'
alias d='dirs -v | head -10'

# List directory contents
alias ls='ls --color=always'
alias la='ls -A'
# alias l='ls -lAh'
# alias ll='ls -lh'
alias c='colorls --sd'
alias ca='colorls -A --sd'
alias ct='colorls --tree'

# Bookamrk directory
alias a='cd ~/APP'
alias dw='cd ~/Downloads'
alias g='cd ~/Games'
alias p='cd ~/Pictures'
alias dt='cd /mnt/DATA'

# Git aliases
alias s='git status'
alias gi='git init'
alias gcl='git clone --recursive'
alias gr='git remote add origin'
alias gp='git push'
alias gc='git commit -am'
alias gd='git diff'

# Tmux
alias ta='tmux attach -t'
alias ts='tmux new-session -s'
alias tl='tmux list-sessions'
alias tk='tmux kill-session -t'

alias ps_mem='sudo ps_mem'
alias cx='chmod +x'

# Function
# Function for Search Command you ever typed
sc(){
  cat ~/.zsh_history | cut -d ";" -f 2 | fzy
}
e(){
  du -a --exclude='.git' ~/.commands ~/.config | awk '{print $2}' | fzy | xargs -r nvim
}
o(){
  du -a --exclude='./.*' . | awk '{print $2}' | fzy | xargs -r xdg-open
}

